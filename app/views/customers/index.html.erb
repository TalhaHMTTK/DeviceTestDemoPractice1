<div class="container">
  <h1 class="display-4 my-4 text-center">This is index page displaying <%= @user.name %> user Customers</h1>

  <div class="row">
    <% @customers.each do |customer| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= customer.name %></h5>
            <p class="card-text"><%= customer.created_at.strftime("%B %d, %Y %I:%M %p") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
